@using Microsoft.AspNetCore.Identity
@using AcademicYearCalendar.Data

@inject SignInManager<ApplicationUser> SignInManager

<FluentNavMenu Collapse="false">
    <FluentNavLink Href="Account/Manage" Match="NavLinkMatch.All">الملف الشخصي</FluentNavLink>
    <FluentNavLink Href="Account/Manage/Email">البريد الالكتروني</FluentNavLink>
    <FluentNavLink Href="Account/Manage/ChangePassword">كلمة المرور</FluentNavLink>   

</FluentNavMenu>


@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
